<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Button color -->
    <solid android:color="#003366" /> <!-- Replace with your desired color -->

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" /> <!-- Optional: Add a white border -->

    <!-- Padding inside the button -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
